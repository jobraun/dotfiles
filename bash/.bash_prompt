#!/bin/bash

function parse_git_branch() {
  local git_branch=''
  if [ "$(git rev-parse --is-inside-work-tree 2> /dev/null)" ]; then
    git_branch="$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/')"
  fi
  echo "$git_branch"
}

PS1='[\[\033[01;32m\]\u\[\033[00m\]@\[\033[01;34m\]\h\[\033[00m\]] \w$(parse_git_branch)\[\033[00m\]\$ '
