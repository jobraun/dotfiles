[user]
  name = Johannes Braun
  email =
[format]
  signoff = true
[color]
  status = auto
  branch = auto
  diff = auto
  decorate = auto
  grep = auto
  pager = true
  ui = true
[color "branch"]
  current = blue reverse
  local = blue
  remote = green
[color "diff"]
  meta = blue
  frag = magenta
  old = red
  new = green
  whitespace = red reverse
[color "status"]
  added = red
  changed = green
  untracked = cyan
[color "decorate"]
  branch = blue
  HEAD = blue reverse
  remoteBranch = magenta
  tag = green dim
[color "grep"]
  filename = yellow
  function = blue
  linenumber = magenta
  match = green reverse
  separator = cyan
[branch "master"]
  remote = origin
  merge = refs/heads/master
[core]
  editor = vim
  pager = less -x2
  ;whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[log]
  decorate=full
[grep]
  linenumber = true
